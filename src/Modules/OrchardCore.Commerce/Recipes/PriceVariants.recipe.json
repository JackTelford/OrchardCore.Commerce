{
  "name": "PriceVariantsProduct",
  "displayName": "PriceVariantsProduct",
  "description": "Creates a Product content type with a Product Part and a Price Variants Part.",
  "author": "The Orchard Team",
  "website": "https://orchardproject.net",
  "version": "2.0",
  "issetuprecipe": false,
  "categories": [ "commerce" ],
  "tags": [ "product" ],
  "steps": [
    {
      "name": "feature",
      "disable": [],
      "enable": [
        "OrchardCore.Autoroute",
        "OrchardCore.Html",
        "OrchardCore.Title",
        "OrchardCore.Commerce"
      ]
    },
    {
      "name": "ContentDefinition",
      "ContentTypes": [
        {
          "Name": "PriceVariantsProduct",
          "DisplayName": "PriceVariantsProduct",
          "Settings": {
            "ContentTypeSettings": {
              "Creatable": true,
              "Listable": true,
              "Draftable": true,
              "Versionable": true,
              "Securable": true
            },
            "FullTextAspectSettings": {}
          },
          "ContentTypePartDefinitionRecords": [
            {
              "PartName": "ProductPart",
              "Name": "ProductPart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "3"
                }
              }
            },
            {
              "PartName": "PriceVariantsPart",
              "Name": "PriceVariantsPart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "4"
                }
              }
            },
            {
              "PartName": "Product",
              "Name": "Product",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "5"
                }
              }
            }
          ]
        }
      ]
    }
  ]
}
