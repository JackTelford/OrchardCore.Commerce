{
  "name": "TestProduct",
  "displayName": "TestProduct",
  "description": "Creates a Product content type with a Product Part and a Price Variants Part.",
  "author": "The Orchard Team",
  "website": "https://orchardproject.net",
  "version": "2.0",
  "issetuprecipe": false,
  "categories": [ "commerce" ],
  "tags": [ "product" ],
  "steps": [
    {
      "name": "feature",
      "disable": [],
      "enable": [
        "OrchardCore.Autoroute",
        "OrchardCore.Html",
        "OrchardCore.Title",
        "OrchardCore.Commerce"
      ]
    },
    {
      "name": "ContentDefinition",
      "ContentTypes": [
        {
          "Name": "TestPriceVariantsProduct",
          "DisplayName": "TestPriceVariantsProduct",
          "Settings": {
            "ContentTypeSettings": {
              "Creatable": true,
              "Listable": true,
              "Draftable": true,
              "Versionable": true,
              "Securable": true
            }
          },
          "ContentTypePartDefinitionRecords": [
            {
              "PartName": "PriceVariantsPart",
              "Name": "PriceVariantsPart",
              "Settings": {}
            },
            {
              "PartName": "ProductPart",
              "Name": "ProductPart",
              "Settings": {}
            }
          ]
        }
      ]
    }
  ]
}
