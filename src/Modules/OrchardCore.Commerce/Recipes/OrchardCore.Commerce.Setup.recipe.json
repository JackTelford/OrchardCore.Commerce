{
  "name": "OrchardCore.Commerce.Setup",
  "displayName": "OrchardCore Commerce",
  "description": "Main setup recipe for the OrchardCore Commerce platform.",
  "author": "OrchardCoreCommerce",
  "website": "https://www.orchardcorecommerce.com",
  "version": "1.0",
  "issetuprecipe": true,
  "categories": [ "orchardcorecommerce" ],
  "tags": [ "setup" ],

  "steps": [
    {
      "name": "feature",
      "enable": [
        // SaaS
        "OrchardCore.HomeRoute",
        "OrchardCore.Admin",
        "OrchardCore.Diagnostics",
        "OrchardCore.DynamicCache",
        "OrchardCore.Features",
        "OrchardCore.Navigation",
        "OrchardCore.Recipes",
        "OrchardCore.Resources",
        "OrchardCore.Roles",
        "OrchardCore.Security",
        "OrchardCore.Settings",
        "OrchardCore.Themes",
        "OrchardCore.Users",

        // Themes
        "TheTheme",
        "TheAdmin",
        "SafeMode"
      ]
    },
    {
      "name": "themes",
      "admin": "TheAdmin",
      "site": "TheTheme"
    },
    {
      "name": "recipes",
      "Values": [
        // Configuration
        {
          "executionid": "OrchardCore.Commerce",
          "name": "Order"
        },
        {
          "executionid": "OrchardCore.Commerce",
          "name": "Product"
        },
        {
          "executionid": "OrchardCore.Commerce",
          "name": "MultiCurrencyProduct"
        }
      ]
    }
  ]
}

